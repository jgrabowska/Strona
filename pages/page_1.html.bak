<!DOCTYPE html>
<html>
	<title>Ewidencja środków trwałych</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="w3.css">
	<link rel="stylesheet" href="style.css">
	<meta charset="utf-8">
<body>

<div class="w3-bar w3-black">
  <a href="#Wyszukaj" class="w3-bar-item w3-button w3-mobile">Wyszukaj</a>
  <a href="#Dodaj" class="w3-bar-item w3-button w3-mobile">Dodaj</a>
  <a href="#Edytuj" class="w3-bar-item w3-button w3-mobile">Edytuj</a>
  <a href="#Usun" class="w3-bar-item w3-button w3-mobile">Usuń</a>
</div>

<table id="wyswietl" class="w3-table-all"></table>

<script>
function loadPage(url)  //the function that loads pages via AJAX
{
    url=url.replace('#page','');    //strip the #page part of the hash and leave only the page number

    $.ajax({    //create an ajax request to load_page.php
        type: "POST",
        url: "load_page.php",
        data: 'page='+url,  //with the page number as a parameter
        dataType: "html",   //expect html to be returned
        success: function(msg){

            if(parseInt(msg)!=0)    //if no errors
            {
                $('#pageContent').html(msg);    //load the returned html into pageContet
                $('#loading').css('visibility','hidden');   //and hide the rotating gif
            }
        }

    });


function loadDoc() {
  var xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
      myFunction(this);
    }
  };
  xhttp.open("GET", "baza.xml", true);
  xhttp.send();
}
function myFunction(xml) {
  var i;
  var xmlDoc = xml.responseXML;
  var table="<tr><th>ŚT</th><th>Nazwa</th><th>Rodzaj</th><th>Numer seryjny</th><th>Ilość</th><th>Data zakupu</th><th>Wartość</th><th>Nr FV</th></tr>";
  var x = xmlDoc.getElementsByTagName("ST");
  for (i = 0; i <x.length; i++) { 
    table += "<tr><td>" +
    x[i].getElementsByTagName("NUMERST")[0].childNodes[0].nodeValue +
    "</td><td>" +
	x[i].getElementsByTagName("NAZWA")[0].childNodes[0].nodeValue +
    "</td><td>" +
	x[i].getElementsByTagName("RODZAJ")[0].childNodes[0].nodeValue +
    "</td><td>" +
	x[i].getElementsByTagName("SN")[0].childNodes[0].nodeValue +
    "</td><td>" +
	x[i].getElementsByTagName("ILOSC")[0].childNodes[0].nodeValue +
    "</td><td>" +
	x[i].getElementsByTagName("DZAKUPU")[0].childNodes[0].nodeValue +
    "</td><td>" +
	x[i].getElementsByTagName("WARTOSC")[0].childNodes[0].nodeValue +
    "</td><td>" +
    x[i].getElementsByTagName("FVAT")[0].childNodes[0].nodeValue +
    "</td></tr>";
  }
  document.getElementById("wyswietl").innerHTML = table;
}
</script>

</body>
</html>